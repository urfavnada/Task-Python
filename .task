    # write a program to print the even from a given list L
         def findeven(alist) :
            Even = []
            for x in alist :
                if x % 2 == 0 :
                    Even.append(x)
            return Even
        mylist = [1,2,3,4,5]
        print ("The even number in this list are :",findeven(mylist))
        
